{
    "name": "@eventstore/docs",
    "private": true,
    "version": "0.1.0-alpha",
    "description": "Documentation for Event Store Design System",
    "license": "Apache-2.0",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/",
        "access": "restricted"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:EventStore/Design-System.git",
        "directory": "documentation"
    },
    "scripts": {
        "build": "run-s \"build:*\"",
        "build:clean": "rm -rf ./www",
        "build:preview": "stencil build --dev --config ./preview/stencil.config.ts",
        "build:docs": "stencil build --prerender",
        "dev": "run-s build:clean build:preview dev:docs",
        "dev:docs": "stencil build --dev --watch --serve",
        "prod": "stencil build --watch --serve",
        "serve": "serve ./www",
        "test": "stencil test --spec --e2e --passWithNoTests",
        "test.watch": "stencil test --spec --e2e --watchAll",
        "icon": "icon --dir ./src/icons"
    },
    "dependencies": {
        "@eventstore/components": "workspace:*",
        "@eventstore/editor": "workspace:*",
        "@eventstore/fields": "workspace:*",
        "@eventstore/layout": "workspace:*",
        "@eventstore/router": "workspace:*",
        "@eventstore/stores": "workspace:*",
        "@eventstore/theme": "workspace:*",
        "@eventstore/utils": "workspace:*",
        "highlight.js": "11.2.0",
        "magic-string": "0.25.7",
        "markdown-it": "12.2.0",
        "markdown-it-anchor": "8.1.3",
        "prettier": "2.2.1",
        "rollup": "2.33.1"
    },
    "devDependencies": {
        "@eventstore/assets": "workspace:*",
        "@eventstore/configs": "workspace:*",
        "@eventstore/icon-manager": "workspace:*",
        "@stencil/core": "2.15.1",
        "@stencil/postcss": "^2.1.0",
        "@types/jest": "25.2.1",
        "@types/markdown-it": "12.0.3",
        "eslint": "^8.4.0",
        "jest": "26.6.3",
        "jest-cli": "24.9.0",
        "npm-run-all": "^4.1.5",
        "postcss-preset-env": "6.7.0",
        "puppeteer": "^10.2.0",
        "rollup-plugin-node-polyfills": "0.2.1",
        "rollup-plugin-require-context": "0.0.2",
        "rollup-plugin-string": "3.0.0",
        "serve": "12.0.0",
        "typedoc": "^0.22.13",
        "typescript": "4.5.5",
        "workbox-build": "5.1.3"
    }
}
