{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "declaration": false,
        "experimentalDecorators": true,
        "lib": ["dom", "es2015"],
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2017",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react",
        "jsxFactory": "h",
        "baseUrl": "src"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
