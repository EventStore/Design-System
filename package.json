{
    "private": true,
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "ssh://git@github.com:EventStore/Design-System.git"
    },
    "workspaces": [
        "documentation",
        "packages/*",
        "tools/*"
    ],
    "prettier": "@eventstore/configs/prettier",
    "scripts": {
        "build": "lerna run build",
        "dev": "yarn workspace @eventstore/docs run dev",
        "test": "lerna run test",
        "lint": "lerna run lint",
        "bump": "lerna version --no-push",
        "release": "run-s release:*",
        "release:pre": "run-s lint build test",
        "release:publish": "lerna publish from-package"
    },
    "devDependencies": {
        "@eventstore/configs": "*",
        "lerna": "^3.22.1",
        "npm-run-all": "^4.1.5"
    }
}
