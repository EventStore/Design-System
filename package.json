{
    "private": true,
    "version": "0.1.8",
    "repository": {
        "type": "git",
        "url": "git@github.com:EventStore/Design-System.git"
    },
    "workspaces": [
        "documentation",
        "packages/*",
        "tools/*",
        "demos/*"
    ],
    "prettier": "@eventstore-ui/configs/prettier",
    "scripts": {
        "build": "nx run-many --target=build --exclude=\"docs,*-demo\"",
        "lint": "nx run-many --target=lint",
        "fix": "nx run-many --target=fix",
        "test": "nx run-many --target=test",
        "dev": "nx run dev --project=${0}",
        "docs": "nx run docs:build",
        "docs:serve": "nx run docs:serve",
        "bump": "yarn workspaces foreach --no-private version",
        "changelog": "changeset"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.2",
        "@changesets/get-github-info": "^0.5.2",
        "@eventstore-ui/configs": "workspace:*",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "dotenv": "^16.3.1",
        "eslint": "^8.4.0",
        "npm-run-all": "^4.1.5",
        "nx": "15.5.1",
        "prettier": "3.0.0",
        "typescript": "5.1.6"
    },
    "packageManager": "yarn@3.1.0",
    "resolutions": {
        "@stencil/core@4.0.1": "patch:@stencil/core@npm:4.0.1#.yarn/patches/@stencil-core-npm-4.0.1-81248f31a7"
    }
}
