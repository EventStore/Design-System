{
    "name": "@eventstore/editor",
    "version": "0.0.60",
    "description": "Monaco Editor for Event Store Design System",
    "license": "Apache-2.0",
    "main": "dist/index.cjs.js",
    "module": "dist/index.js",
    "es2015": "dist/esm/index.js",
    "es2017": "dist/esm/index.js",
    "jsnext:main": "dist/esm/index.js",
    "types": "dist/types/index.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "collection:main": "dist/collection/index.js",
    "unpkg": "dist/components/components.js",
    "files": [
        "dist/",
        "workers/",
        "/initialize.d.ts",
        "/initialize.js",
        "/monaco.d.ts",
        "/monaco.js",
        "/configure.d.ts",
        "/configure.js"
    ],
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/",
        "access": "restricted"
    },
    "repository": {
        "type": "git",
        "url": "ssh://git@github.com:EventStore/Design-System.git",
        "directory": "packages/components"
    },
    "scripts": {
        "build": "run-p build:*",
        "start": "stencil build --dev --watch --serve --openBrowser=false",
        "build:stencil": "stencil build --docs",
        "build:initialize": "tsc ./utils/initialize.ts --declaration --outDir . ",
        "build:monaco": "tsc ./utils/monaco.ts --declaration --outDir . ",
        "build:configure": "tsc ./utils/configure.ts --declaration --outDir . ",
        "build:workers": "run-p workers:*",
        "workers:main": "rollup ../../node_modules/monaco-editor/esm/vs/editor/editor.worker.js --file ./workers/editor.worker.js --format iife",
        "workers:json": "rollup ../../node_modules/monaco-editor/esm/vs/language/json/json.worker.js --file ./workers/json.worker.js --format iife",
        "workers:typescript": "rollup ../../node_modules/monaco-editor/esm/vs/language/typescript/ts.worker.js --file ./workers/ts.worker.js --format iife",
        "workers:css": "rollup ../../node_modules/monaco-editor/esm/vs/language/css/css.worker.js --file ./workers/css.worker.js --format iife",
        "workers:html": "rollup ../../node_modules/monaco-editor/esm/vs/language/html/html.worker.js --file ./workers/html.worker.js --format iife",
        "docs": "run-s docs:*",
        "docs:stencil": "stencil build --docs-json ../../documentation/generated/editor.stencil.json",
        "docs:typedoc": "typedoc --tsconfig ./utils/tsconfig.json --json ../../documentation/generated/editor.typedoc.json",
        "test": "stencil test --spec --e2e --passWithNoTests",
        "test.watch": "stencil test --spec --e2e --watchAll",
        "lint": "eslint \"src/**/*.{ts,tsx}\" && prettier --check \"src/**/**/!(*.d).{ts,tsx,css,json,html}\""
    },
    "dependencies": {
        "monaco-editor": "^0.22.3"
    },
    "peerDependencies": {
        "@eventstore/components": "0.0.x",
        "@eventstore/utils": "0.0.x"
    },
    "devDependencies": {
        "@eventstore/components": "^0.0.60",
        "@eventstore/utils": "^0.0.60",
        "@stencil/core": "^2.6.0",
        "@types/puppeteer": "^5.4.3",
        "jest": "^26.6.3",
        "npm-run-all": "^4.1.5",
        "puppeteer": "^5.5.0",
        "typedoc": "^0.21.4",
        "typescript": "4.2.3"
    }
}
