{
    "name": "@eventstore/editor",
    "version": "0.1.0-alpha",
    "description": "Monaco Editor for Event Store Design System",
    "license": "Apache-2.0",
    "main": "dist/index.cjs.js",
    "module": "dist/index.js",
    "es2015": "dist/esm/index.js",
    "es2017": "dist/esm/index.js",
    "jsnext:main": "dist/esm/index.js",
    "types": "dist/types/index.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "collection:main": "dist/collection/index.js",
    "unpkg": "dist/components/components.js",
    "files": [
        "dist/",
        "workers/",
        "/initialize.d.ts",
        "/initialize.js",
        "/monaco.d.ts",
        "/monaco.js",
        "/configure.d.ts",
        "/configure.js"
    ],
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/",
        "access": "restricted"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:EventStore/Design-System.git",
        "directory": "packages/components"
    },
    "scripts": {
        "build": "run-p \"build:*\"",
        "start": "stencil build --dev --watch --serve --openBrowser=false",
        "build:stencil": "stencil build --docs",
        "build:initialize": "tsc ./utils/initialize.ts --target esnext --moduleResolution node --declaration --outDir . ",
        "build:monaco": "tsc ./utils/monaco.ts --target esnext --moduleResolution node --declaration --outDir . ",
        "build:configure": "tsc ./utils/configure.ts --declaration --outDir . ",
        "build:workers": "run-p \"workers:*\"",
        "workers:main": "rollup ../../node_modules/monaco-editor/esm/vs/editor/editor.worker.js --file ./workers/editor.worker.js --format iife --output.name editorWorker",
        "workers:json": "rollup ../../node_modules/monaco-editor/esm/vs/language/json/json.worker.js --file ./workers/json.worker.js --format iife --output.name jsonWorker",
        "workers:typescript": "rollup ../../node_modules/monaco-editor/esm/vs/language/typescript/ts.worker.js --file ./workers/ts.worker.js --format iife --output.name tsWorker",
        "workers:css": "rollup ../../node_modules/monaco-editor/esm/vs/language/css/css.worker.js --file ./workers/css.worker.js --format iife --output.name cssWorker",
        "workers:html": "rollup ../../node_modules/monaco-editor/esm/vs/language/html/html.worker.js --file ./workers/html.worker.js --format iife --output.name htmlWorker",
        "docs": "run-s \"docs:*\"",
        "docs:stencil": "stencil build --docs-json ../../documentation/generated/editor.stencil.json",
        "docs:typedoc": "typedoc --tsconfig ./utils/tsconfig.json --json ../../documentation/generated/editor.typedoc.json",
        "test": "stencil test --spec --e2e --passWithNoTests",
        "test.watch": "stencil test --spec --e2e --watchAll",
        "lint": "yarn g:lint"
    },
    "dependencies": {
        "monaco-editor": "^0.22.3"
    },
    "peerDependencies": {
        "@eventstore/components": "0.1.x",
        "@eventstore/theme": "0.1.x",
        "@eventstore/utils": "0.1.x"
    },
    "devDependencies": {
        "@eventstore/components": "workspace:*",
        "@eventstore/configs": "workspace:*",
        "@eventstore/theme": "workspace:*",
        "@eventstore/utils": "workspace:*",
        "@stencil/core": "^2.11.0",
        "jest": "^26.6.3",
        "npm-run-all": "^4.1.5",
        "puppeteer": "^10.2.0",
        "rollup": "2.33.1",
        "typedoc": "^0.21.4",
        "typescript": "4.2.3"
    }
}
