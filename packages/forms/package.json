{
    "name": "@eventstore-ui/forms",
    "version": "1.0.3",
    "description": "Form validation and working copy data store.",
    "license": "Apache-2.0",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:EventStore/Design-System.git",
        "directory": "packages/forms"
    },
    "scripts": {
        "build": "run-s \"build:*\"",
        "build:clean": "rm -rf ./dist",
        "build:ts": "tsc -p .",
        "build:rollup": "rollup -c rollup.config.mjs",
        "build:cleanup": "rm -rf ./build",
        "docs": "typedoc --logLevel Error --json ../../documentation/generated/forms.typedoc.json",
        "test": "jest --testEnvironment jsdom --passWithNoTests",
        "lint": "yarn g:lint",
        "fix": "yarn g:fix"
    },
    "nx": {
        "targets": {
            "docs": {
                "outputs": [
                    "{workspaceRoot}/documentation/generated/forms.*"
                ]
            }
        }
    },
    "peerDependencies": {
        "@eventstore-ui/components": "^1.0.0",
        "@eventstore-ui/stores": "^1.0.0",
        "@eventstore-ui/utils": "^1.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-typescript": "^7.12.7",
        "@eventstore-ui/components": "workspace:*",
        "@eventstore-ui/stores": "workspace:*",
        "@eventstore-ui/utils": "workspace:*",
        "@stencil/core": "^4.0.5",
        "@types/jest": "^27.0.3",
        "babel-jest": "^27.5.1",
        "jest": "^27.4.5",
        "npm-run-all": "^4.1.5",
        "rollup": "^4.18.0",
        "typedoc": "0.24.8",
        "typescript": "5.1.6"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ],
            "@babel/preset-typescript"
        ]
    }
}
