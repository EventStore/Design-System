{
    "name": "@eventstore-ui/stores",
    "version": "0.1.0-alpha.17",
    "description": "Data stores for Stencil",
    "license": "Apache-2.0",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:EventStore/Design-System.git",
        "directory": "packages/stores"
    },
    "scripts": {
        "build": "run-s \"build:*\"",
        "build:clean": "rm -rf ./dist",
        "build:ts": "tsc -p .",
        "build:rollup": "rollup -c rollup.config.js",
        "build:cleanup": "rm -rf ./build",
        "docs": "typedoc --logLevel Error --json ../../documentation/generated/stores.typedoc.json",
        "test": "stencil test --spec --passWithNoTests",
        "test.watch": "stencil test --spec --watchAll",
        "lint": "yarn g:lint"
    },
    "targets": {
        "docs": {
            "outputs": [
                "{workspaceRoot}/documentation/generated/stores.*"
            ]
        }
    },
    "peerDependencies": {
        "@eventstore-ui/utils": "0.1.x"
    },
    "devDependencies": {
        "@eventstore-ui/utils": "workspace:*",
        "@stencil/core": "3.0.0",
        "@types/jest": "^27.0.3",
        "jest": "^27.4.5",
        "npm-run-all": "^4.1.5",
        "rollup": "^2.52.7",
        "typedoc": "0.23.24",
        "typescript": "4.9.4"
    }
}
