{
    "name": "@eventstore/theme",
    "version": "0.1.0-alpha.1",
    "description": "Core components for Event Store Design System",
    "main": "dist/index.js",
    "prettier": "@eventstore/configs/prettier",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/",
        "access": "restricted"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:EventStore/Design-System.git",
        "directory": "packages/theme"
    },
    "files": [
        "dist/"
    ],
    "scripts": {
        "build": "tsc --outDir ./dist --declaration",
        "docs": "typedoc --logLevel Error --json ../../documentation/generated/theme.typedoc.json",
        "test": "stencil test --spec --passWithNoTests",
        "test.watch": "stencil test --spec --watchAll",
        "lint": "yarn g:lint"
    },
    "peerDependencies": {
        "@eventstore/utils": "0.1.x"
    },
    "devDependencies": {
        "@eventstore/utils": "workspace:*",
        "@stencil/core": "2.15.1",
        "jest": "^26.6.3",
        "typedoc": "^0.22.13",
        "typescript": "4.5.5"
    }
}
