{
    "name": "@eventstore/utils",
    "version": "0.0.59",
    "description": "Utilities for Event Store Design System",
    "license": "UNLICENSED",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/",
        "access": "restricted"
    },
    "repository": {
        "type": "git",
        "url": "ssh://git@github.com:EventStore/Design-System.git",
        "directory": "packages/utils"
    },
    "scripts": {
        "build": "run-s build:*",
        "build:clean": "rm -rf ./dist",
        "build:ts": "tsc -p .",
        "build:rollup": "rollup -c rollup.config.js",
        "build:cleanup": "rm -rf ./build",
        "test": "jest --passWithNoTests",
        "lint": "eslint \"src/**/*.{ts,tsx}\" && prettier --check \"src/**/**/!(*.d).{ts,tsx,css,json,html}\""
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-typescript": "^7.12.7",
        "@eventstore/configs": "^0.0.59",
        "babel-jest": "^26.1.0",
        "jest": "^26.6.3",
        "typescript": "^4.1.3"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ],
            "@babel/preset-typescript"
        ]
    }
}
