{
    "name": "@eventstore/stencil-markdown-plugin",
    "private": true,
    "version": "0.0.1",
    "main": "./dist/index.js",
    "scripts": {
        "build": "run-s build:*",
        "build:plugin": "tsc --project ./src/plugin/tsconfig.json --outDir ./ --declaration",
        "build:component": "tsc --project ./src/components/tsconfig.json --outDir ./dist --declaration",
        "dev": "run-p \"build:* -- --watch\""
    },
    "dependencies": {
        "@stencil/core": "^1.15.0",
        "@mdx-js/mdx": "^1.6.6",
        "@rollup/pluginutils": "^3.1.0"
    },
    "devDependencies": {
        "@types/node": "^12.0.7",
        "npm-run-all": "^4.1.5",
        "rollup": "^2.18.2",
        "typescript": "^3.9.6"
    }
}
