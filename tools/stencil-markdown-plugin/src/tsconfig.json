{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "declaration": false,
        "experimentalDecorators": true,
        "lib": ["dom", "es2018"],
        "moduleResolution": "node",
        "target": "es2018",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react",
        "jsxFactory": "h"
    },
    "exclude": ["node_modules"]
}
