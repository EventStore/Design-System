{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "declaration": false,
        "experimentalDecorators": true,
        "lib": ["dom", "es2020"],
        "moduleResolution": "node16",
        "module": "ES2020",
        "target": "es2020",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "jsx": "react",
        "jsxFactory": "h"
    },
    "include": ["src/index.ts"],
    "exclude": ["node_modules"]
}
